// build app ui

var buildUI = function(apiInfo) {
	console.log(buildUI);
	var win = Ti.UI.createWindow({
		backgroundColor: "#f2f2f0",
		layout: "vertical"
	});
	
	var city = ({
		text: "City",
		backgroundColor: "#96d9ad",
		color: "#000"
	});
	
	var temp = ({
		text: "City",
		backgroundColor: "#f2c641",
		color: "#000"
	});
	
	var weather = ({
		text: "City",
		backgroundColor: "#f2b441",
		color: "#000"
	});
	
	var weather_icon = ({
		text: "Weather Icon",
		backgroundColor: "#f26b5e",
		color: "#000"
	});
	
	var humidity = ({
		text: "Humidity",
		backgroundColor: "#96d9ad",
		color: "#000"
	});
	
	var wind = ({
		text: "Wind MPH",
		backgroundColor: "#f2c641",
		color: "#000"
	});
	
	var feelslike_f = ({
		text: "Feels Like",
		backgroundColor: "#f2b441",
		color: "#000"
	});
	
	win.add(city);
	win.add(temp);
	win.add(weather);
	win.add(weather_icon);
	win.add(humidity);
	win.add(wind);
	win.add(feelslike_f);
	
	win.open();
};

exports.buildUI = buildUI;
