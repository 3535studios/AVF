var storeUI = function(storeInfo) {
	
	var win = Ti.UI.createWindow({
		backgroundColor: "#fff",
		layout: "horizontal"
	});
	
	var storeOneView = Ti.UI.createView({
		height: 350,
		width: 350,
		top: 40,
		left: 20,
		backgroundColor: "#2277cc"
	});
	
	var storeStoreLabel = Ti.UI.createLabel({
		font : {
				fontSize : 24
		},
		color: "#fff",
		text: storeInfo.name,
		top: 0
	});
	
	var addressLabel = Ti.UI.createLabel({
		font : {
				fontSize : 24
		},
		color: "#fff",
		text: storeInfo.address,
		top: 0
	});
	
	var cityLabel = Ti.UI.createLabel({
		font : {
				fontSize : 24
		},
		color: "#fff",
		text: storeInfo.city,
		top: 0
	});
	
	var zipLabel = Ti.UI.createLabel({
		font : {
				fontSize : 24
		},
		color: "#fff",
		text: storeInfo.zip,
		top: 0
	});
	
	var phoneLabel = Ti.UI.createLabel({
		font : {
				fontSize : 24
		},
		color: "#fff",
		text: storeInfo.phone,
		top: 0
	});
	
	var storeTwoView = Ti.UI.createView({
		height: 350,
		width: 350,
		top: 40,
		left: 20,
		backgroundColor: "#1d5fa8"
	});
	
	var storeThreeView = Ti.UI.createView({
		height: 350,
		width: 350,
		top: 20,
		left: 20,
		backgroundColor: "#f27b37"
	});
	
	var storeFourView = Ti.UI.createView({
		height: 350,
		width: 350,
		top: 20,
		left: 20,
		backgroundColor: "#454545"
	});
	
	storeOneView.add(storeOneLabel);
	win.add(storeOneView);
	win.add(storeTwoView);
	win.add(storeThreeView);
	win.add(storeFourView);
	
	win.open();
};

exports.storeUI = storeUI;
