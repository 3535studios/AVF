//get data

var apiData = function() {
console.log(apiData);
var url = "http://api.wunderground.com/api/2ea7d8e37d25e57a/conditions/q/CA/San_Francisco.json";
console.log(url);
var client = Ti.Network.createHTTPClient ({
	
	onload : function(e) {
		var json = JSON.parse(this.responseText);
			console.log(json);
			var apiInfo = {
				city : json.city,
				temp : json.temp_f,
				weather : json.weather
				
			};
			console.log(apiInfo);
			var ui = require("ui");
				ui.buildUI(apiInfo);
	},
	
	onerror : function(e) {
		alert("The api is not connected.");
	},
	timeout: 5000
});

client.open("GET", url);
client.send();

};

exports.apiData = apiData;