// build app ui

var buildUI = function(apiInfo) {
	console.log(buildUI);
	var win = Ti.UI.createWindow({
		backgroundColor: "#f2f2f0",
		layout: "vertical"
	});
	
	var cityLabel = Ti.UI.createLabel({
		text: apiInfo.city,
		backgroundColor: "#f2c641",
		color: "#fff",
		height: 100,
		top: 50,
		width: "100%",
		textAlign: "center",
		font: {
			fontSize: 64
		}
	});
	
	var tempLabel = Ti.UI.createLabel({
		text: apiInfo.temp + "\u00B0" + " F",
		backgroundColor: "#96d9ad",
		color: "#fff",
		height: 200,
		width: "100%",
		textAlign: "center",
		font: {
			fontSize: 164
		}
	});
	
	var weatherLabel = Ti.UI.createLabel({
		text: apiInfo.weather,
		backgroundColor: "#f26b5e",
		color: "#fff",
		height: 100,
		width: "100%",
		textAlign: "center",
		font: {
			fontSize: 64
		}
	});
	
	var weatherView = Ti.UI.createImageView({
		image: apiInfo.weather_icon,
		right: 200
	});
	
	var humidityLabel = Ti.UI.createLabel({
		text: "Humidity: " + apiInfo.humidity,
		backgroundColor: "#6a777a",
		color: "#fff",
		height: 100,
		width: "100%",
		textAlign: "center",
		font: {
			fontSize: 44
		}
	});
	
	var windLabel = Ti.UI.createLabel({
		text: "Wind MPH: " + apiInfo.wind,
		backgroundColor: "#64350d",
		color: "#fff",
		height: 100,
		width: "100%",
		textAlign: "center",
		font: {
			fontSize: 44
		}
	});
	
	var feelslike_fLabel = Ti.UI.createLabel({
		text: "Feels Like: " + apiInfo.feelslike +"\u00B0" + " F",
		backgroundColor: "#74bfd4",
		color: "#fff",
		height: 100,
		width: "100%",
		textAlign: "center",
		font: {
			fontSize: 44
		}
	});
	
	win.add(cityLabel);
	win.add(tempLabel);
	win.add(weatherLabel);
	weatherLabel.add(weatherView);
	win.add(humidityLabel);
	win.add(windLabel);
	win.add(feelslike_fLabel);
	
	win.open();
};

exports.buildUI = buildUI;
